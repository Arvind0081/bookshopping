@model BookShoppingProject.Model.ViewModels.ProductVM
@{
    ViewData["Title"] = "Upsert";
    var title = "New Product";
}
@if(Model.Product.Id!=0)
{
    title = "Edit Product";
}

<div class="col-6 border-bottom">
    <h2 class="text-primary">@title</h2>
</div>

<div class="row p-4">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">

            @if (Model.Product.Id != 0)
            {
                <input type="hidden" asp-for="Product.Id" />
            }
            <div asp-validation-summary="None" class="text-danger"></div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.Title"></label>
                <input asp-for="Product.Title" class="form-control" />
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.Discription"></label>
                <textarea asp-for="Product.Discription" class="form-control"></textarea>
                <span asp-validation-for="Product.Discription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.ISBN"></label>
                <input asp-for="Product.ISBN" class="form-control" />
                <span asp-validation-for="Product.ISBN" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.Author"></label>
                <input asp-for="Product.Author" class="form-control" />
                <span asp-validation-for="Product.Author" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.ListPrice"></label>
                <input asp-for="Product.ListPrice" class="form-control" />
                <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.Price50"></label>
                <input asp-for="Product.Price50" class="form-control" />
                <span asp-validation-for="Product.Price50" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.Price100"></label>
                <input asp-for="Product.Price100" class="form-control" />
                <span asp-validation-for="Product.Price100" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.Price"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.ImageUrl"></label>
                <input type="file" id="UploadBox" name="files" multiple class="form-control" />
                <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.CategoryId"></label>
                @Html.DropDownListFor(m => m.Product.CategoryId, Model.CategoryList, "--Select--", new { @class = "form-control" })
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="Product.CoverTypeId"></label>
                @Html.DropDownListFor(m => m.Product.CoverTypeId, Model.CoverTypeList, "--Select--", new {@class="form-control"})
                <span asp-validation-for="Product.CoverTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">

                @if(Model.Product.Id!=0)
            {
                    <partial name="_EditAndBackToListButton"/>
            }
            else
            {
                    <partial name="_CreateAndBackToListButton"/>
            }

            </div>
        </form>
    </div>
    <div class="col-md-6">
        @if(Model.Product.Id!=0)
            {
                <img src="@Model.Product.ImageUrl"/>
            }
    </div>
</div>

@section Scripts
{
<partial name="_ValidationScriptsPartial"/>

<script src="https://cdn.tiny.cloud/1/ne2gvt6wosycl0kuf5clobb4b1lmrluikc2iphrn6qn4dp7i/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: "textarea",
        Plugin: "lists",
        menubar:"file edit format"
    })
</script>
}